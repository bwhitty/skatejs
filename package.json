{
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "1.6.0",
    "babel-preset-es2016": "^6.24.1",
    "babel-preset-es2017": "^6.24.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "6.24.1",
    "babel-preset-stage-0": "6.24.1",
    "jest": "20.0.4",
    "babel-preset-es2015-rollup": "^3.0.0",
    "rollup": "^0.49.3",
    "rollup-plugin-babel": "^3.0.2",
    "rollup-plugin-uglify": "^2.0.1",
    "@skatejs/bore": "4.0.0",
    "@skatejs/renderer-preact": "0.0.1",
    "@skatejs/ssr": "0.12.2",
    "@skatejs/val": "0.3.1",
    "babel-eslint": "7.2.3",
    "babel-plugin-modules-map": "1.0.0",
    "babel-plugin-modules-web-compat": "1.1.1",
    "babel-preset-latest": "6.24.1",
    "commitizen": "2.9.6",
    "conartist": "^0.10.0",
    "cz-conventional-changelog": "2.0.0",
    "eslint-plugin-flowtype": "2.34.0",
    "get-typed": "1.0.0-beta.1",
    "highlight.js": "9.12.0",
    "husky": "0.13.3",
    "jest-cli": "^21.0.2",
    "lint-staged": "4.0.2",
    "nodemon": "1.11.0",
    "preact": "^8.2.5",
    "semantic-release": "6.3.2",
    "typescript": "2.5.2",
    "validate-commit-msg": "2.12.1",
    "watchman": "0.1.8",
    "yargs": "^8.0.2"
  },
  "files": [
    "esnext",
    "es",
    "node",
    "src",
    "umd"
  ],
  "main": "node/index.js",
  "module": "es/index.js",
  "esnext": "esnext/index.js",
  "types": "src/index.d.ts",
  "scripts": {
    "build:es": "babel --no-babelrc src --out-dir es --presets=$(pwd)/config/babel.es",
    "build:esnext": "babel --no-babelrc src --out-dir esnext --presets=$(pwd)/config/babel.esnext",
    "build:node": "babel --no-babelrc src --out-dir node --presets=$(pwd)/config/babel.node",
    "test": "jest",
    "build:umd": "rollup -c && rollup -c --min",
    "commitmsg": "validate-commit-msg",
    "dev": "nodemon --exec 'npm run site' --watch site --watch src",
    "prepublish": "npm run build:es && npm run build:esnext && npm run build:node && npm run build:umd",
    "precommit": "lint-staged",
    "release": "git push && git push --tags && npm publish",
    "site": "./node_modules/@skatejs/ssr/bin/index --babel config/babel.node --out public --no-rehydrate --src site/*.js",
    "test:watch": "jest --watch",
    "test:ts": "tsc -p ./",
    "types": "get-typed src/index.js --dest umd/skatejs"
  },
  "babel": {
    "presets": [
      "env",
      "flow",
      "react",
      "stage-0"
    ]
  },
  "jest": {
    "modulePathIgnorePatterns": [
      "./node_modules"
    ],
    "setupFiles": [
      "./test/unit/setup"
    ],
    "setupTestFrameworkScriptFile": "./test/unit/setup-test",
    "testEnvironment": "@skatejs/ssr/jest"
  },
  "browser": "umd/index.js",
  "name": "skatejs",
  "version": "5.0.0-beta.3",
  "description": "Skate is a library built on top of the W3C web component specs that enables you to write functional and performant web components with a very small footprint.",
  "license": "MIT",
  "author": "Trey Shugart <treshugart@gmail.com> (http://treshugart.github.io)",
  "repository": {
    "type": "git",
    "url": "https://github.com/skatejs/skatejs"
  },
  "keywords": [
    "components",
    "custom",
    "dom",
    "elements",
    "web",
    "components",
    "vdom",
    "virtual"
  ],
  "lint-staged": {
    "*.(js|json)": [
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
