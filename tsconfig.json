{
  "compilerOptions": {
    "target": "esnext",
    "baseUrl": "./",
    "paths": {
      "skatejs": ["./"]
    },
    "strict": true,
    "sourceMap": true,
    "moduleResolution": "node",
    // TODO @hotell
    // "declaration": true,
    "jsx": "react",
    "jsxFactory": "h",
    "pretty": true,
    "noEmit": true
  },
  "include": [
    "src/index.d.ts",
    "src/ts-types/*",
    "test/ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
